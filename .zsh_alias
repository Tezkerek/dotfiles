#!/usr/bin/zsh

# Reload zshrc
alias zreload=". $HOME/.zshrc"

# ls colors
alias ls="ls --color=auto"

# fzf shortcuts
alias fvim='nvim $(fzf)'
alias fcd='cd $(FZF_DEFAULT_COMMAND="fd --hidden --type d" fzf)'

# copy password to clipboard from keepass
alias cppass="keepassxc-cli clip $HOME/passwords.kdbx "

# use adb from Android Studio's downloaded SDK
alias adb="$HOME/.local/share/android/sdk/platform-tools/adb "

# Quit
alias q="exit"

# Lock screen
alias lock="swaylock -c 000000"

# Wine 32-bit
alias wine32="WINEPREFIX=$WINEPREFIX32 WINEARCH=$WINEARCH32 wine "

# Photoshop CS6 (wine)
alias photoshop="wine32 'C:\\Program Files\\Adobe\\Adobe Photoshop CS6\\Photoshop.exe'"

# School
alias labs='wget -O - http://liis.ro/hosted/activitati/2013/laboratoare/labs.pdf | \
    convert -density 100 - -quality 30 -flatten png:- | \
    imv -'
