### Variables
# Logo key. Use Mod1 for Alt.
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term kitty

set $menu bemenu-run --no-overlap --monitor=all --tf=$focus_color --hf=$focus_color --prompt="|>" | xargs swaymsg exec --

set $file-finder kitty --title "Open file" --class "popup_terminal" zsh -ic 'fzo'

### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * dpms off"' \
#               resume 'swaymsg "output * dpms on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.


### Input configuration
#
input "1133:49970:Logitech_Gaming_Mouse_G502" {
    accel_profile flat
    scroll_factor 1.75
}
input type:keyboard xkb_layout "us,ro,us"
input type:keyboard xkb_variant ",std,colemak"
input type:keyboard xkb_options "ctrl:nocaps"

# Workaround for https://github.com/swaywm/sway/issues/5359
seat * keyboard_grouping none
bindsym $mod+space input type:keyboard xkb_switch_layout next
bindsym $mod+Shift+space input type:keyboard xkb_switch_layout prev

### Sway settings
#
focus_follows_mouse no
floating_modifier $mod normal
default_floating_border pixel
default_border pixel 2
smart_borders no_gaps
smart_gaps on
# Hide title bar of single window in a tabbed/stacked workspace
hide_edge_borders --i3 horizontal

### Colors
#
set $focus_color "#e6c547"
client.focused $focus_color $focus_color "#000000" $focus_color $focus_color
client.unfocused "#333333" "#222222" "#cccccc" "#292d2e" "#222222"

### Key bindings
#
# Basics:
#
    # Start terminal
    bindsym $mod+Shift+Return exec $term

    # Kill window
    bindsym $mod+x kill

    # Launchers
    bindsym $mod+o exec $menu
    bindsym $mod+i exec wofi --show=drun
    bindsym $mod+p exec $file-finder

    # Reload config
    bindsym $mod+Shift+Escape reload

    # Exit sway
    bindsym $mod+Shift+q exit

    # Focus windows
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    # Move windows
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
#
# Workspaces:
#
    # Focus workspace
    bindsym $mod+1 workspace 1
    bindsym $mod+2 workspace 2
    bindsym $mod+3 workspace 3
    bindsym $mod+4 workspace 4
    bindsym $mod+5 workspace 5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8
    bindsym $mod+9 workspace 9

    # Move window to workspace
    bindsym $mod+Shift+1 move container to workspace 1
    bindsym $mod+Shift+2 move container to workspace 2
    bindsym $mod+Shift+3 move container to workspace 3
    bindsym $mod+Shift+4 move container to workspace 4
    bindsym $mod+Shift+5 move container to workspace 5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8
    bindsym $mod+Shift+9 move container to workspace 9
#
# Layout stuff:
#
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Layout
    bindsym $mod+w layout tabbed
    bindsym $mod+Shift+w layout stacking
    bindsym $mod+t layout toggle split

    bindsym $mod+f fullscreen

    # Make the current focus sticky
    bindsym $mod+s sticky toggle

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+y floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+Shift+y focus mode_toggle

    # Focus parent container
    bindsym $mod+a focus parent

    # Focus child container
    bindsym $mod+Shift+a focus child
#
# Scratchpad:
#
    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+Return scratchpad show
#
# Function Keys
#
    bindsym XF86AudioMicMute exec "amixer set Capture toggle"
    bindsym XF86AudioMute exec "pamixer --toggle-mute"
    bindsym XF86AudioLowerVolume exec "pamixer --decrease 2"
    bindsym XF86AudioRaiseVolume exec "pamixer --increase 2"

    bindsym XF86AudioPlay exec "playerctl play-pause"
    bindsym XF86AudioNext exec "playerctl next"
    bindsym XF86AudioPrev exec "playerctl prev"

    bindsym XF86MonBrightnessDown exec "xbacklight -dec 5"
    bindsym XF86MonBrightnessUp exec "xbacklight -inc 5"

    # Screenshot
    bindsym Alt+Shift+Print exec "grimshot retake | wl-copy"
    bindsym Alt+Print exec "grimshot take | wl-copy"
    bindsym Print exec "grimshot screen | wl-copy"

### Modes
#
# Resizing containers:
#
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

### Status Bar
#
bar {
    position top
    swaybar_command waybar
}

include /etc/sway/config.d/*

### Startup
#
# Start a terminal scratchpad
exec $term --title "Scratchpad" --class "terminal_scratchpad"
for_window [app_id="terminal_scratchpad"] move scratchpad, move position center

# Other window rules
for_window [app_id="firefox" title="Launch Application"] floating enable
for_window [app_id="firefox" title="Picture-in-Picture"] \
    floating enable, sticky enable, move position 1190 80
for_window [class="Steam" title="Friends List"] floating enable
for_window [app_id="org.keepassxc.KeePassXC" title="KeePassXC - Browser Access Request"] floating enable
for_window [app_id="popup_terminal"] floating enable, border pixel 1

{{ if eq .device "desktop" -}}
### Desktop specific config
#
set $primary DP-3
set $secondary HDMI-A-1

output $primary {
    resolution 1920x1080@144Hz
    position 0 0
    background ~/pics/wallpapers/primary fill
}
output $secondary {
    position 1920 0
    background ~/pics/wallpapers/secondary fill
}

# Assign workspaces to outputs
workspace 1 output $primary
workspace 2 output $primary
workspace 3 output $primary
workspace 4 output $primary
workspace 5 output $secondary
workspace 6 output $secondary
workspace 7 output $secondary
workspace 8 output $secondary
workspace 9 output $primary

bindsym $mod+n focus output right
bindsym $mod+Shift+n move workspace to output right

{{ else if eq .device "laptop" -}}
### Laptop specific config
#
output * bg ~/pics/wallpapers/primary fill

input "1267:12363:MSFT0002:01_04F3:304B_Touchpad" {
    tap enabled
    middle_emulation enabled
    scroll_factor 0.5
}

# Start touchpad gestures
exec ydotoold
exec libinput-gestures-setup start
{{- end -}}
